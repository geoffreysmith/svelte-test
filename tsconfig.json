{
  "include": ["src/**/*"],
  "extends": "@tsconfig/svelte/tsconfig.json",
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove",
    "lib": [
      "DOM",
      "ES2020",
      "WebWorker"
    ],
    "resolveJsonModule": true,
    "strict": true,
    "types": ["svelte"]
  },
}